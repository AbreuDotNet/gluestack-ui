{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve", 
    "noEmit": false,
    "declaration": true,
    "outDir": "./lib/esm",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "paths": {
      "react-native": ["./node_modules/react-native-web"]
    }
  },
  "exclude": ["**/__tests__", "**/__fixtures__", "**/__mocks__"]
} 