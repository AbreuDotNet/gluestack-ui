{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib/esm",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "target": "es2018",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "exclude": ["**/__tests__", "**/__fixtures__", "**/__mocks__", "lib", "node_modules"]
}