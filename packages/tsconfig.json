{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "bundler",
      "lib": ["dom", "dom.iterable", "esnext"],
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "noEmit": true,
  
      "paths": {
        "@/*": ["./*"],
        "@/utils/*": ["./utils/*"],
        "@/components/*": ["./src/components/*"]
      }
    },
    "exclude": [
      "**/babel.config.js",
      "**/scripts/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**"
    ]
}