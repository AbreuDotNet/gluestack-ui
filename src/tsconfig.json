{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,

    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/docs-components/*": ["./docs-components/*"]
    }
  },
  "exclude": [
    "**/babel.config.js",
    "**/scripts/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/docs/**",
  ],
  "include": [
    "next-env.d.ts",
    "nativewind-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ]
}
