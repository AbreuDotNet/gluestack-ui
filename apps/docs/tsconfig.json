{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "paths": {
      "@/*": ["./*"],
      "@/utils/*": ["./utils/*"],
      "@/components/*": ["./components/*"]
    }
  },

}
